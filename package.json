{
  "name": "bmad-orchestrator-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for BMAD agent tools (orchestrator and agent-env CLIs)",
  "type": "module",
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  },
  "scripts": {
    "build": "pnpm -r build",
    "pretest": "pnpm --filter @zookanalytics/shared build",
    "build:image": "docker build -f image/Dockerfile -t agent-devcontainer:local .",
    "test": "pnpm -r test",
    "test:run": "pnpm -r test:run",
    "lint": "pnpm -r lint",
    "check": "pnpm -r check",
    "type-check": "pnpm -r type-check",
    "dev:orchestrator": "pnpm --filter @zookanalytics/bmad-orchestrator dev",
    "dev:agent-env": "pnpm --filter @zookanalytics/agent-env dev",
    "bootstrap": "pnpm install && pnpm build",
    "setup:agent-env": "pnpm run bootstrap && cd packages/agent-env && pnpm link --global",
    "test:install:retro": "node packages/bmm-retrospective-module/test-install.cjs",
    "bmad:install":"npx bmad-method install --directory $PWD --modules core,bmm,bmb,tea",
    "changeset": "changeset",
    "prepare": "husky"
  },
  "keywords": [
    "bmad",
    "devpod",
    "orchestrator",
    "agent-env",
    "cli",
    "tui"
  ],
  "repository": "github:ZookAnalytics/bmad-orchestrator",
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.29.3",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-perfectionist": "^5.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17",
    "yaml": "^2.6.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": ["esbuild", "rollup"]
  }
}
