{
  "name": "bmad-orchestrator-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for BMAD agent tools (orchestrator and agent-env CLIs)",
  "type": "module",
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsc",
    "build:all": "pnpm -r build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:all": "pnpm -r test:run",
    "lint": "eslint src/",
    "lint:all": "pnpm -r lint",
    "format": "prettier --write src/",
    "type-check": "tsc --noEmit",
    "check": "pnpm type-check && pnpm lint && pnpm test:run --coverage",
    "check:all": "pnpm -r check",
    "prepare": "husky"
  },
  "keywords": [
    "bmad",
    "devpod",
    "orchestrator",
    "cli",
    "tui"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.26.2",
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "clipboardy": "^5.0.2",
    "commander": "^14.0.2",
    "execa": "^9.6.1",
    "ink": "^6.6.0",
    "react": "^19.2.3",
    "timeago.js": "^4.0.2",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-perfectionist": "^5.3.1",
    "husky": "^9.1.7",
    "ink-testing-library": "^4.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
